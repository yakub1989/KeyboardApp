<Window x:Class="KeyboardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard Layout Designer" Height="400" Width="850">
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 1: Function Keys -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5,0,5">
            <Button Content="Esc" Name="btn_00" Width="50" Height="25" Margin="0,0,15,0"/>
            <Button Content="F1" Name="btn_01" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F2" Name="btn_02" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F3" Name="btn_03" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F4" Name="btn_04" Width="50" Height="25" Margin="0,0,15,0"/>
            <Button Content="F5" Name="btn_05" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F6" Name="btn_06" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F7" Name="btn_07" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F8" Name="btn_08" Width="50" Height="25" Margin="0,0,15,0"/>
            <Button Content="F9" Name="btn_09" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F10" Name="btn_10" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F11" Name="btn_11" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="F12" Name="btn_12" Width="50" Height="25"/>
        </StackPanel>

        <!-- Row 2: Number Keys -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,5">
            <Button Content="`" Name="btn_13" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="1" Name="btn_14" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="2" Name="btn_15" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="3" Name="btn_16" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="4" Name="btn_17" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="5" Name="btn_18" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="6" Name="btn_19" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="7" Name="btn_20" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="8" Name="btn_21" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="9" Name="btn_22" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="0" Name="btn_23" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="-" Name="btn_24" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="=" Name="btn_25" Width="50" Height="25" Margin="0,0,5,0"/>
            <Button Content="Backspace" Name="btn_26" Width="100" Height="25"/>
        </StackPanel>

        <!-- Row 3: QWERTY Row -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5,0,5">
            <Button Content="Tab" Name="btn_27" Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Q" Name="btn_28" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="W" Name="btn_29" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="E" Name="btn_30" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="R" Name="btn_31" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="T" Name="btn_32" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="Y" Name="btn_33" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="U" Name="btn_34" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="I" Name="btn_35" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="O" Name="btn_36" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="P" Name="btn_37" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="[" Name="btn_38" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="]" Name="btn_39" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="\" Name="btn_40" Width="70" Height="25"/>
        </StackPanel>

        <!-- Row 4: Home Row -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5,0,5">
            <Button Content="Caps" Name="btn_41" Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="A" Name="btn_42" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="S" Name="btn_43" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="D" Name="btn_44" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="F" Name="btn_45" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="G" Name="btn_46" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="H" Name="btn_47" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="J" Name="btn_48" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="K" Name="btn_49" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="L" Name="btn_50" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content=";" Name="btn_51" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="'" Name="btn_52" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="Enter" Name="btn_53" Width="100" Height="25"/>
        </StackPanel>

        <!-- Row 5: Bottom Row -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,5,0,5">
            <Button Content="Shift" Name="btn_54" Width="100" Height="25" Margin="0,0,5,0"/>
            <Button Content="Z" Name="btn_55" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="X" Name="btn_56" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="C" Name="btn_57" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="V" Name="btn_58" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="B" Name="btn_59" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="N" Name="btn_60" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="M" Name="btn_61" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="," Name="btn_62" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="." Name="btn_63" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="/" Name="btn_64" Width="50" Height="25" Margin="0,0,5,0" Click="OnKeyClick"/>
            <Button Content="Shift" Name="btn_65" Width="100" Height="25"/>
        </StackPanel>

        <!-- Row 6: Space and Modifiers -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,5,0,5">
            <Button Content="Ctrl" Name="btn_66" Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Alt" Name="btn_67" Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Space" Name="btn_68" Width="400" Height="25" Margin="0,0,5,0"/>
            <Button Content="Alt" Name="btn_69" Width="80" Height="25" Margin="0,0,5,0"/>
            <Button Content="Ctrl" Name="btn_70" Width="80" Height="25"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <Button Content="Evaluate layout" Margin="0,151,730,-146" Grid.Row="5" Click="EvaluateLayout"/>
        <Button Content="Generate layout" Margin="125,151,605,-146" Grid.Row="5"/>
        <Button Content="Reset to QWERTY" Margin="250,151,480,-146" Grid.Row="5" Click="ResetLayout"/>
        <Button Content="Settings" Margin="375,151,355,-146" Grid.Row="5" Click="OpenSettings"/>
    </Grid>
</Window>
