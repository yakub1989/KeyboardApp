<Window x:Class="KeyboardApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard Layout Designer" Height="250" Width="650">
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Keyboard Layout Designer" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,20"
                   Grid.Row="0" />

        <!-- QWERTY Row -->
        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Q" Grid.Column="0" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="W" Grid.Column="1" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="E" Grid.Column="2" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="R" Grid.Column="3" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="T" Grid.Column="4" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="Y" Grid.Column="5" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="U" Grid.Column="6" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="I" Grid.Column="7" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="O" Grid.Column="8" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="P" Grid.Column="9" MinWidth="50" Height="25" Click="OnKeyClick"/>
        </Grid>

        <!-- Home Row -->
        <Grid Grid.Row="3" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="A" Grid.Column="0" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="S" Grid.Column="1" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="D" Grid.Column="2" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="F" Grid.Column="3" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="G" Grid.Column="4" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="H" Grid.Column="5" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="J" Grid.Column="6" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="K" Grid.Column="7" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="L" Grid.Column="8" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content=";" Grid.Column="9" MinWidth="50" Height="25" Click="OnKeyClick"/>
        </Grid>

        <!-- Bottom Row -->
        <Grid Grid.Row="4" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Z" Grid.Column="0" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="X" Grid.Column="1" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="C" Grid.Column="2" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="V" Grid.Column="3" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="B" Grid.Column="4" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="N" Grid.Column="5" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="M" Grid.Column="6" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="," Grid.Column="7" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="." Grid.Column="8" MinWidth="50" Height="25" Click="OnKeyClick"/>
            <Button Content="/" Grid.Column="9" MinWidth="50" Height="25" Click="OnKeyClick"/>
        </Grid>

        <!-- Row 6: Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Evaluate layout" Width="120" Margin="10,0" Click="EvaluateLayout"/>
            <Button Content="Generate layout" Width="120" Margin="10,0" Click="GenerateLayout"/>
            <Button Content="Reset to QWERTY" Width="120" Margin="10,0" Click="ResetLayout"/>
            <Button Content="Settings" Width="120" Margin="10,0" Click="OpenSettings"/>
        </StackPanel>
    </Grid>
</Window>
