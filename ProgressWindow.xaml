<Window x:Class="KeyboardApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Optimization in progress" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Topmost="True">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="StatusLabel"
                       Text="Initializing..."
                       HorizontalAlignment="Center"
                       Margin="10"
                       FontSize="16"/>
        </StackPanel>

        <!-- Animacja w prawym dolnym rogu -->
        <TextBlock Name="AnimationLabel"
                   Text="|"
                   FontFamily="Consolas"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="10"
                   FontSize="20"/>
    </Grid>
</Window>
